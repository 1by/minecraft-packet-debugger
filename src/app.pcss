@tailwind base;
@tailwind components;
@tailwind utilities;

.feather:not([class*=" stroke"]) {
  stroke-width: 1.5px;
}

.loading-anim {
    animation: loading-spinner 1s linear infinite;
}

@keyframes loading-spinner {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}
